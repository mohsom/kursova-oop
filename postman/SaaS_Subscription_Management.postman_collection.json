              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"event\": \"payment_failed\",\n  \"subscriptionId\": \"SUBSCRIPTION_ID_HERE\",\n  \"userId\": \"USER_ID_HERE\",\n  \"timestamp\": \"2024-01-01T00:00:00.000Z\",\n  \"metadata\": {\n    \"reason\": \"insufficient_funds\",\n    \"attemptCount\": 3\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/webhooks",
              "host": ["{{baseUrl}}"],
              "path": ["webhooks"]
            }
          }
        },
        {
