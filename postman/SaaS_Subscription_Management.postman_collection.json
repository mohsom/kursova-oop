              "raw": "{\n  \"event\": \"subscription_cancelled\",\n  \"subscriptionId\": \"SUBSCRIPTION_ID_HERE\",\n  \"userId\": \"USER_ID_HERE\",\n  \"timestamp\": \"2024-01-01T00:00:00.000Z\",\n  \"metadata\": {\n    \"reason\": \"user_request\",\n    \"cancelledAt\": \"2024-01-01T00:00:00.000Z\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/webhooks",
              "host": ["{{baseUrl}}"],
              "path": ["webhooks"]
            }
          }
        },
        {
          "name": "Test Webhook",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"event\": \"payment_processed\",\n  \"subscriptionId\": \"SUBSCRIPTION_ID_HERE\",\n  \"userId\": \"USER_ID_HERE\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/webhooks/test",
              "host": ["{{baseUrl}}"],
              "path": ["webhooks", "test"]
            }
          }
        }
      ]
    },
    {
      "name": "Demo Scenarios",
      "item": [
