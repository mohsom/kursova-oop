              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"email\": \"demo@example.com\",\n  \"name\": \"Demo User\"\n}"
                },
                "url": {
                  "raw": "{{baseUrl}}/users",
                  "host": ["{{baseUrl}}"],
                  "path": ["users"]
                }
              }
            },
            {
              "name": "2. Create Subscription",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"type\": \"premium\",\n  \"price\": 29.99,\n  \"durationMonths\": 1,\n  \"paymentMethod\": \"credit_card\",\n  \"autoRenew\": true\n}"
                },
                "url": {
                  "raw": "{{baseUrl}}/subscriptions",
                  "host": ["{{baseUrl}}"],
                  "path": ["subscriptions"]
                }
              }
            },
            {
              "name": "3. Process Payment",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
