                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"event\": \"payment_processed\",\n  \"subscriptionId\": \"{{subscriptionId}}\",\n  \"userId\": \"{{userId}}\",\n  \"timestamp\": \"2024-01-01T00:00:00.000Z\"\n}"
